<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Color_Create_Screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#222D3C">

        <ImageView
            android:id="@+id/back_color"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ripaleffect"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/mediumquis"
            android:gravity="center"
            android:text="Post"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/save_color_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/ripaleffect"
            android:fontFamily="@font/mediumquis"
            android:gravity="center"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#10171F"
        android:orientation="vertical">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="607dp"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/color_img_create"
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@color/white" />

                    <TextView
                        android:id="@+id/txt_color_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#222D3C"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/text_color_img"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/ripal_round"
                            android:padding="17dp"
                            android:src="@drawable/font" />

                        <View
                                android:id="@+id/txt_color_view"
                            android:layout_width="40dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/style_color_img"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/ripal_round"
                            android:padding="17dp"
                            android:src="@drawable/style" />

                        <View
                            android:id="@+id/style_color_view"
                            android:layout_width="40dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/color_color_img"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/ripal_round"
                            android:padding="17dp"
                            android:src="@drawable/color" />

                        <View
                            android:id="@+id/color_color_view"
                            android:layout_width="40dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/shadow_color_img"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/ripal_round"
                            android:padding="17dp"
                            android:src="@drawable/shadow" />

                        <View
                            android:id="@+id/shadow_color_view"
                            android:layout_width="40dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/vector_color_img"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/ripal_round"
                            android:padding="17dp"
                            android:src="@drawable/bkvctr" />

                        <View
                            android:id="@+id/vector_color_view"
                            android:layout_width="40dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/sticker_color_img"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/ripal_round"
                            android:padding="9dp"
                            android:src="@drawable/sticker" />

                        <View
                            android:id="@+id/sticker_color_view"
                            android:layout_width="40dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:visibility="gone" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </FrameLayout>



    </LinearLayout>



</LinearLayout>