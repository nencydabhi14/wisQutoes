<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10171F"
    android:orientation="vertical"
    tools:context=".Picture_like">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="360dp">


                <ImageView
                    android:id="@+id/picture_like"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:gravity="center"
                    android:src="@color/white" />

                <ImageView
                    android:id="@+id/picture_like_insta"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:src="@drawable/instapost" />

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <ImageView
                    android:id="@+id/liked_pic"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripaleffect"
                    android:padding="13dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/like" />

                <ImageView
                    android:id="@+id/saved_pic"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripaleffect"
                    android:padding="13dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/download" />

                <ImageView
                    android:id="@+id/share_picture"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripaleffect"
                    android:padding="13dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/share" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>